<body>
  <div class="section"></div>
  <main>
    <center>
      <div class="section"></div>

      <div class="section"></div>

      <div class="container">
        <div class="z-depth-1 white lighten-4 row" style="display: inline-block; padding: 32px 55px 0px 55px; border: 2px solid #EEE;">
          <img class="responsive-img" style="width: 220px;" align="center" src="https://pbs.twimg.com/profile_images/809303390618460161/_qfYH1A4_400x400.jpg" />
          <form class="col s12" method="post">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>
            <div class='row'>
              <div class='input-field col s12'>
                {{input class='validate' value=email type='email' name='email' id='email'}}
                <label for='email'><h3><i class="mail outline icon"></i> Introduce tu correo electrónico</h3></label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                {{input class='validate' value=contrasena type='password' name='password' id='password'}}
                <label for='password'><h3><i class="privacy icon"></i> Introduce tu contraseña</h3></label>
              </div>
              <label style='float: right;'>
                <a class='pink-text' href='#!'><b><h4>¿Olvidaste tu contraseña?</h4></b></a>
              </label>
            </div>

            <br>
            <br>
            <center>
              <div class='row'>
                <a {{action 'iniciar'}} class="waves-effect light-blue lighten-1 btn">Iniciar Sesión</a>
                <br>
                <br>
              </div>
            </center>
          </form>
        </div>
      </div>

      {{#Link-to 'registro' }}<h3>Crear cuenta</h3> {{/Link-to}}
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
</body>
{{outlet}}
